<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawlayout"
    tools:context=".MainActivity">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <RelativeLayout
           android:id="@+id/rl_head"
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:background="#A5927E">
           <ImageView
               android:id="@+id/iv_back"
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:src="@mipmap/menu"
               android:layout_centerVertical="true"
               android:layout_marginLeft="20dp"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="网易云音乐"
               android:textColor="#000000"
               android:layout_centerInParent="true"/>
       </RelativeLayout>
       <FrameLayout
           android:id="@+id/framelayout"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginBottom="90dp">
       </FrameLayout>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="90dp"
           android:layout_alignParentBottom="true">
           <TextView
               android:id="@+id/tv_curration"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="00.00"
               android:textColor="#000000"
                android:layout_marginTop="7dp"
               android:layout_marginLeft="20dp"/>
           <TextView
               android:id="@+id/tv_duration"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="00.00"
               android:textColor="#000000"
               android:layout_marginTop="7dp"
               android:layout_alignParentRight="true"
               android:layout_marginRight="20dp"/>
           <SeekBar
               android:id="@+id/sb_musicPlan"
               android:layout_width="match_parent"
               android:layout_height="30dp"
               android:layout_toRightOf="@id/tv_curration"
               android:layout_toLeftOf="@id/tv_duration"/>
           <RelativeLayout
               android:id="@+id/rl_foot"
               android:layout_width="match_parent"
               android:layout_height="65dp"
               android:layout_below="@id/sb_musicPlan"
               android:background="#A5927E">
               <ImageView
                   android:id="@+id/iv_musicImg"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@mipmap/qn"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="15dp"/>
               <TextView
                   android:id="@+id/tv_musicName"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="网易云音乐"
                   android:textColor="#000000"
                   android:layout_toRightOf="@id/iv_musicImg"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="10dp"/>
               <TextView
                   android:id="@+id/tv_musicMakerName"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text=""
                   android:textColor="#000000"
                   android:layout_toRightOf="@id/iv_musicImg"
                   android:layout_below="@id/tv_musicName"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="10dp"/>
               <ImageView
                   android:id="@+id/iv_controlMusic"
                   android:layout_width="40dp"
                   android:layout_height="50dp"
                   android:src="@drawable/ic_startmusic"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="20dp"
                   android:layout_centerVertical="true"/>
           </RelativeLayout>
       </RelativeLayout>
   </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:id="@+id/nav_menu"
        android:layout_gravity="left"
        app:headerLayout="@layout/nav_headlayout"
        app:menu="@menu/navmenu"
        android:background="#A5927E">
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>