<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:descendantFocusability="blocksDescendants">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#A5927E">
        <TextView
            android:id="@+id/tv_music_list_Num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/tv_music_list_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="城南花已开"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_toRightOf="@id/tv_music_list_Num"
            android:layout_toLeftOf="@id/iv_music_list_delete"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/tv_music_list_maker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="三亩地"
            android:layout_toRightOf="@id/tv_music_list_Num"
            android:layout_below="@id/tv_music_list_Name"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:id="@+id/iv_music_list_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ljt"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
