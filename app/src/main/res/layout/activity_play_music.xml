<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusicPlayActivity.PlayMusicActivity"
    android:background="@drawable/popbg">
    <RelativeLayout
        android:id="@+id/rl_pm_head"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#494949">
        <ImageView
            android:id="@+id/iv_pm_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_pm_musicname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_toRightOf="@id/iv_pm_back"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/tv_pm_maker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#666666"
            android:textSize="16dp"
            android:layout_toRightOf="@id/iv_pm_back"
            android:layout_below="@id/tv_pm_musicname"
            android:layout_marginLeft="21dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/fx"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ImageView
        android:layout_below="@id/rl_pm_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/iv_head_bg"/>
    <ImageView
        android:id="@+id/iv_pm_disk"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@mipmap/disk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"/>
    <ImageView
        android:layout_below="@id/rl_pm_head"
        android:id="@+id/_iv_pm_styli"
        android:layout_width="270dp"
        android:layout_height="290dp"
        android:src="@mipmap/styli2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-150dp"/>
    <ImageView
        android:id="@+id/iv_pm_circleimg"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"/>
    <LinearLayout
        android:id="@+id/ll_pm_kj"
        android:layout_marginTop="120dp"
        android:layout_below="@id/iv_pm_disk"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="30dp">
        <ImageView
            android:id="@+id/iv_pm_heart"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:src="@drawable/ic_heart"/>
        <ImageView
            android:id="@+id/iv_pm_download"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:src="@mipmap/xz"/>
        <ImageView
            android:id="@+id/iv_pm_smile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:src="@mipmap/gj"/>
        <ImageView
            android:id="@+id/iv_pm_comment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:src="@mipmap/pl"/>
        <ImageView
            android:id="@+id/iv_pm_sangd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:src="@drawable/ic_sangd"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_seek"
        android:layout_marginTop="35dp"
        android:layout_below="@id/ll_pm_kj"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/tv_pm_curration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00.00"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <SeekBar
            android:id="@+id/sb_pm_musicplan"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/tv_pm_curration"
            android:layout_toLeftOf="@id/tv_pm_duration"/>
        <TextView
            android:id="@+id/tv_pm_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00.00"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/rl_seek"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/iv_pm_controlmusic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_startmusic"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/iv_pm_previous"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_previous"
            android:layout_toLeftOf="@id/iv_pm_controlmusic"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"/>
        <ImageView
            android:id="@+id/iv_pm_next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_next"
            android:layout_toRightOf="@id/iv_pm_controlmusic"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"/>
        <ImageView
            android:id="@+id/iv_pm_sort"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_sort"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>
        <ImageView
            android:id="@+id/iv_pm_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/sjbf"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
    </RelativeLayout>
</RelativeLayout>